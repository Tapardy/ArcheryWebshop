@model MvcArcheryWebshop.Models.ProductModel

@{
    ViewData["Title"] = "Product";
}

<main>
    <h1>@Model.Name</h1>

    <img src="@Model.ImageUrl" alt="@Model.Name" width="300" height="250"/>

    <p>@Model.Description</p>

    <p>Price: â‚¬@Model.Price</p>
    <form method="post" action="/Wishlist/AddToWishlist">
        <input type="hidden" name="productId" value="@Model.ID"/>
        <div class="product-info">
            <button class="btn btn-primary">Add to Wishlist</button>
        </div>
    </form>
    <form method="post" action="/Cart/AddToCart">
        <input type="hidden" name="productId" value="@Model.ID"/>
        <div class="product-info">
            <button class="btn btn-primary">Add to Cart</button>
        </div>
    </form>
</main>