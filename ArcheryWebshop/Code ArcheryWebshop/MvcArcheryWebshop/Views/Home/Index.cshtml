@{
    ViewData["Title"] = "Archery shop";
}
@model List<MvcArcheryWebshop.Models.ProductModel>
<main>
    <section class="hero">
        <h2>Welcome to the webshop!</h2>
        <p>Here you can find a wide variety of products to choose from</p>
    </section>
    <div class="featured-products-header">
        <h3>Featured Products</h3>
    </div>
    <section class="featured-products">
        @foreach (var product in Model)
        {
            <div class="product">
                <h4>@product.Name</h4>
                <a href="@Url.Action("Details", "Product", new { id = product.ID })">
                    <img src="@product.ImageUrl" alt="@product.Name">
                </a>

                <div class="product-info">
                    <p>Price: â‚¬@product.Price.ToString("0.00")</p>
                    <form method="post" action="/Cart/AddToCart">
                        <input type="hidden" name="productId" value="@product.ID"/>
                        <div class="product-info">
                            <button class="btn btn-primary">Add to Cart</button>
                        </div>
                    </form>
                </div>
            </div>
        }
    </section>
</main>